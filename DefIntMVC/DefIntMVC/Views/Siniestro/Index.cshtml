@model IEnumerable<DefIntMVC.Models.Siniestro>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Siniestros</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
           @Html.DisplayName("Fecha Inicio")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lugar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle)
        </th>
        <th>
            @Html.DisplayName("Daños Materiales")
        </th>
        <th>
            @Html.DisplayName("Daños Personales")
        </th>      
        <th>
            @Html.DisplayNameFor(model => model.Fotografia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Costo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayName("Funcionario")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.polizaVehicular.Placa)
        </th>
        <th>
            @Html.DisplayName("Fecha Fin")
        </th>
        <th>
            @Html.DisplayName("Descripcion Cierre")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fechaInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lugar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Detalle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dañosMateriales)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dañosPersonales)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Fotografia)*@
            @{
                var base64 = Convert.ToBase64String(item.Fotografia);
                var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
             }
            <img src='@imgsrc' style="max-width:150px;max-height:150px"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Costo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Funcionario.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.polizaVehicular.Placa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaFin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescripcionCierre)
        </td>
        <td>
            @Html.ActionLink("Gastos", "Gastos", new { id = item.idPoliza })|
            @Html.ActionLink("Cerrar", "Cerrar", new { id = item.idSiniestro }) |
            @Html.ActionLink("Editar", "Edit", new { id=item.idSiniestro }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idSiniestro })|
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idSiniestro })
        </td>
    </tr>
}

</table>
