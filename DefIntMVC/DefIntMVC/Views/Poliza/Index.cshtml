        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Funcionario.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipoPoliza.NombreTP)
