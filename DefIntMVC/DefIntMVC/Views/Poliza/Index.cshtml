        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idPoliza }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idPoliza }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idPoliza })
        </td>
