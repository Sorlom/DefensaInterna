                    @Html.ValidationMessageFor(model => model.imagenPerdTotal, "", new { @class = "text-danger" })*@
                </div>
            </div>
            if (int.Parse(TempData["TPoliza"].ToString()) == 3)
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.reparacionVehicular, "Costo Reparacion Vehicular", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.reparacionVehicular, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.reparacionVehicular, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.imagenRepVehicular, "Imagen Costo Reparacion Vehicular", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="file" id="image6" name="image6" />
                        @*@Html.EditorFor(model => model.imagenRepVehicular, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.imagenRepVehicular, "", new { @class = "text-danger" })*@
                    </div>
                </div>
            }
            else
            {
                <div class="form-group">
                    @Html.HiddenFor(model => model.reparacionVehicular, new { @value = "" })
                    @Html.HiddenFor(model => model.imagenRepVehicular, new { @value = "" })
                </div>
            }
        }
        else
        {
            <div class="form-group">
                @Html.HiddenFor(model => model.perdidaTotal, new { @value = "" })
                @Html.HiddenFor(model => model.imagenPerdTotal, new { @value = "" })
                @Html.HiddenFor(model => model.reparacionVehicular, new { @value = "" })
                @Html.HiddenFor(model => model.imagenRepVehicular, new { @value = "" })
            </div>
        }


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Crear Nuevo" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index", "Siniestro")
</div>

